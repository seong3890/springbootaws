files:
  /etc/nginx/nginx.conf:
    mode: "000644"
    owner: root
    group: root
    content: |

      worker_processes auto;
      events {
          worker_connections 1024;
      }
      http {
          types_hash_max_size 2048;
          types_hash_bucket_size 128;
          include       mime.types;
          default_type  application/octet-stream;

      }

commands:
  reload_nginx:
    command: "service nginx reload"
